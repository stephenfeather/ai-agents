  "constraints": {
    "hard": [
      {
        "statement": "No direct database queries without wpdb",
        "rationale": "always use $wpdb with prepared statements"
      },
      {
        "statement": "No unescaped output",
        "rationale": "always use esc_html(), esc_attr(), esc_url(), wp_kses()"
      },
      {
        "statement": "No missing nonces",
        "rationale": "all form submissions and AJAX must verify nonces"
      },
      {
        "statement": "No capability bypasses",
        "rationale": "always check current_user_can() before privileged actions"
      },
      {
        "statement": "No unsanitized input",
        "rationale": "sanitize_text_field(), absint(), etc. on all input"
      },
      {
        "statement": "No direct file operations",
        "rationale": "use WP_Filesystem API"
      },
      {
        "statement": "No hardcoded paths",
        "rationale": "use plugin_dir_path(), get_template_directory(), etc."
      },
      {
        "statement": "No loading scripts/styles outside enqueue",
        "rationale": "always wp_enqueue_script/style"
      },
      {
        "statement": "No modifying core files",
        "rationale": "use hooks, child themes, or plugins"
      }
    ],
    "soft": [
      {
        "statement": "Prefer hooks over function overrides",
        "rationale": null
      },
      {
        "statement": "Prefer block themes over classic for new projects",
        "rationale": null
      },
      {
        "statement": "Prefer REST API over admin-ajax for new features",
        "rationale": null
      },
      {
        "statement": "Avoid deprecated functions",
        "rationale": "check WordPress version"
      },
      {
        "statement": "Prefer namespaces and autoloading in plugins",
        "rationale": null
      },
      {
        "statement": "Avoid mixing PHP and HTML without templates",
        "rationale": null
      }
    ]
  },
